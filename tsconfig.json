{
  "compilerOptions": {
    "target": "ES2020",
    "jsx": "react-jsx",
    "module": "ES2020",

    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,

    "baseUrl": "./",
    "paths": {
      "@components/*":["src/components/*"],
      "@reducers/*":["src/store/reduces/*"],
      "@helpers/*":["src/helpers/*"],
      "@assets/*":["src/assets/*"],
      "@hooks/*":["src/hooks/*"],
      "@store/*":["src/store/*"],
      "@types":["src/types.ts"],
    }
  }
}